generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // Adicionando o caminho para o banco de dados SQLite
}

model Usuario {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  senha       String
  tipo        String
  dataCadastro DateTime @default(now())
  reservas    Reserva[]
}

model Espaco {
  id          Int      @id @default(autoincrement())
  nome        String
  tipo        String
  capacidade  Int?
  descricao   String?
  status      String   @default("ativo")
  reservas    Reserva[]
}

model Reserva {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  espacoId    Int
  dataReserva DateTime
  horaInicio  String
  horaFim     String
  status      String   @default("ativa")
  criadoEm    DateTime @default(now())

  usuario Usuario @relation(fields: [usuarioId], references: [id])
  espaco  Espaco  @relation(fields: [espacoId], references: [id])

  @@unique([espacoId, dataReserva, horaInicio, horaFim]) 
}

